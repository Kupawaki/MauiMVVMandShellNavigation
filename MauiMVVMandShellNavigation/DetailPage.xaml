<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiMVVMandShellNavigation.DetailPage"
             xmlns:viewmodel="clr-namespace:MauiMVVMandShellNavigation.ViewModels"
             x:DataType="viewmodel:DetailViewModel"
             Title="DetailPage">
    <VerticalStackLayout>

        <Frame BackgroundColor="Gray">
            <Label Text="{Binding TaskDetail}" VerticalOptions="Center" HorizontalOptions="Center" />
        </Frame>

        <Button Text="Go Back" Command="{Binding GoBackCommand}"/>
    </VerticalStackLayout>
</ContentPage>